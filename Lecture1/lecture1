% ---------------- слайд 25 ---------------

\begin{frame}
\frametitle{Свойства плотности распределения}
\begin{exampleblock}{Утверждение}
Если $f_{\xi}(x)$ плотность распределения случайной величины $\xi$,
то
\begin{itemize}
\item[$\blacktriangleright$]
$F_{\xi}(x)=\int\limits_{-\infty}^xf_{\xi}(\tau)d\tau$;
\item[$\blacktriangleright$]
$\lim\limits_{x\rightarrow\pm\infty}f_{\xi}(x)=0$;
\item[$\blacktriangleright$]
$\int\limits_{-\infty}^{\infty}f_{\xi}(x)=1$;
\item[$\blacktriangleright$]
$P(a\leq\xi<b)=\int\limits_a^bf_{\xi}(x)dx, a,b\in\mathbb{R}$.
\end{itemize}
\end{exampleblock}
\end{frame}
% -----------------------------------------

% ---------------- слайд 26 ---------------
\begin{frame}
\frametitle{Математическое ожидание и дисперсия}
\begin{columns}
\begin{column}{6cm}
\begin{tikzpicture}
\draw [fill=magenta] (1,1) circle (2pt) node[above] {$m_1,r_1$};
\draw [fill=magenta] (2,1.5) circle (4pt) node[above] {$m_2,r_2$};
\draw [fill=magenta] (-1,-2) circle (3pt) node[anchor=west] {$m_3,r_3$};
\draw [fill=magenta] (2,0.1) circle (1pt) node[anchor=north] {$m_{N-1},r_{N-1}$};
\draw [fill=magenta] (3,1) circle (2pt) node[above] {$m_{N},r_N$};

\draw [->] (0,0) node[anchor=east] {O}--(1,1);
\draw [->] (0,0)--(2,1.5);
\draw [->] (0,0)--(-1,-2);
\draw [->] (0,0)--(2,0.1);
\draw [->] (0,0)--(3,1);
\end{tikzpicture}

\begin{block}{}Центр масс системы точек $\{m_i\}$: $R_C$.
$$
(\sum\limits_i m_i) R_C=\sum\limits_i m_i r_i.
$$
\end{block}
\end{column}
\begin{column}{0.2cm}
\end{column}
\begin{column}{6cm}
\begin{block}{Дискретные распределения}
Аналог понятия центра масс в теории вероятностей ---
математическое ожидание случайной величины (${\rm E}\xi$).
Для дискретных распределений
оно определяется заменой $m_i\rightarrow p_i$:
$$
{\rm E}\xi=\dfrac{\sum\limits_i p_i x_i}{{\color{red}(\sum p_i)=1}},
$$
где $\{x_i\}$ --- возможные значения случайной величины $\xi$;
$p_i=P(\xi=x_i)$.
\end{block}
\end{column}
\end{columns}
\end{frame}
% -----------------------------------------


% ---------------- слайд 27 ---------------
\begin{frame}
\frametitle{Математическое ожидание и дисперсия}
\begin{block}{Непрерывные распределения}
Математическое ожидание случайной величины $\xi$,
имеющей плотность распределения $f_{\xi}(x)$, определяется следующим
образом:
$$
\begin{array}{l}
{\color{magenta}{\rm E}\xi=\lim\limits_{dx\rightarrow0}
\sum\limits_iP(\xi\in dx(x_i))x_i=
\lim\limits_{dx\rightarrow0}\sum\limits_i f_{\xi}(x_i)x_idx(x_i);}\\
{\rm E}\xi=\int\limits_{-\infty}^{\infty}xf_{\xi}(x)dx.
\end{array}
$$
\end{block}
\begin{block}{Задача}
Охарактеризовать <<широту>> распределения величины $\xi$
относительно ${\rm E}\xi$.
\end{block}
\end{frame}

% -----------------------------------------

% ---------------- слайд 28 ---------------

\begin{frame}
\frametitle{Математическое ожидание и дисперсия}
\begin{exampleblock}{Центр масс {\color{red!40}(определение)}}
$$
Q(q)=\sum\limits_i m_i(r_i-q)^2, \min\limits_qQ(q).
\eqno{(*)}
$$
Решение (*) достигается при $q=R_C$.
\end{exampleblock}

\begin{alertblock}{Вопрос}
Что характеризует разброс масс механической системы относительно
$R_C$?
\end{alertblock}


\begin{exampleblock}<2>{Ответ}
В качестве меры разброса массы относительно центра масс можно
выбрать значение $Q(R_C)$, в механике называемое моментом инерции
механической системы относительно точки (характеризуемой $R_C$).
\end{exampleblock}
\end{frame}

% -----------------------------------------

% ---------------- слайд 29 ---------------
\begin{frame}
\frametitle{Математическое ожидание и дисперсия}
\begin{exampleblock}{Определение}
Дисперсией случайной величины $\xi$ называется число
${\rm D}\xi={\rm E}(\xi-{\rm E}\xi)^2$, или в случае дискретного распределения ---
${\rm D}\xi=\sum\limits_ip_i(x_i-\sum\limits_jp_jx_j)^2$; в случае
непрерывного распределения с $f_{\xi}(x)$ ---
${\rm D}\xi=\int\limits_{-\infty}^{\infty}(x-{\rm E}\xi)^2f_{\xi}(x)dx$, ${\rm E}\xi=\int\limits_{-\infty}^{\infty}xf_{\xi}(x)dx$.
\end{exampleblock}

\begin{block}{Свойства математического ожидания}
\begin{itemize}
\item[$\blacktriangleright$] $\textrm{E}(\alpha\xi_1+\beta\xi_2+\gamma)=\alpha\textrm{E}\xi_1+\beta\textrm{E}\xi_2+\gamma$;
\item[$\blacktriangleright$]
$\textrm{E}\xi_1\xi_2=\textrm{E}\xi_1\textrm{E}\xi_2$, если $\xi_1$ и $\xi_2$ независимы;
\item[$\blacktriangleright$] $|\textrm{E}\xi|\leq\textrm{E}|\xi|$,
\end{itemize}
где $\xi_1,\xi_2,\xi$ некоторые случайные величины, для которых
определено математическое ожидание; $\alpha,\beta,\gamma$ ---
произвольные действительные числа.
\end{block}
\end{frame}

% -----------------------------------------


% ---------------- слайд 30 ---------------
\begin{frame}
\frametitle{Математическое ожидание и дисперсия}
\begin{block}{Свойства дисперсии}
\begin{itemize}
\item[$\blacktriangleright$] $\textrm{D}(\xi_1+\xi_2)=\textrm{D}\xi_1+\textrm{D}\xi_2$, если
$\xi_1,\xi_2$ являются независимыми;
\item[$\blacktriangleright$] $\textrm{D}\alpha=0,
\alpha\in\mathbb{R}$; $\textrm{D}(\alpha\xi)=\alpha^2\textrm{D}\xi$;
\end{itemize}
\end{block}

\begin{block}{Характеристики некоторых распределений}
\begin{itemize}
\item $\xi\in \mathbf{U}_{[0,1]}$ --- равномерное распределение на
интервале $[0,1]$: $\rm{E}\xi=1/2$, $\rm{D}\xi=1/12$;
\item $\xi\Subset
f_{\xi}(x)=\dfrac{1}{\sqrt{2\pi}}\textrm{e}^{-x^2/2}$ --- нормальное
распределение: ${\rm E}\xi=0$, ${\rm D}\xi=1$; ($\xi\in\mathcal{N}(0,1)$, $\xi$ имеет стандартное нормальное
распределение);
\item $\eta=\sigma\xi+a$, где $a,\sigma\in\mathbb{R};
\xi\in\mathcal{N}(0,1)$, то $\eta$ имеет нормальное распределение: ${\rm E}\xi=a$,
$\rm{D}\xi=\sigma^2$; $(\xi\in\mathcal{N}(a,\sigma^2))$.
\end{itemize}
\end{block}

\end{frame}
% -----------------------------------------

% ---------------- слайд 31 ---------------
