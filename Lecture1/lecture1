\draw[color=red] plot (\x,{atan(\x*10)/100}) node[above] {$\,F(x) = \frac{1}{\sqrt{2\pi}}\int\limits_0^x\mathrm e^{-t^2/2}dt$};
\end{tikzpicture}
{\small Стандартная нормальная функция распределения.}
\end{column}

